<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_bsi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="@dimen/item_name_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_bsi_required_marker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_bsi_required_marker"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_stars"
        app:layout_constraintBottom_toBottomOf="@+id/tv_bsi_name"
        app:layout_constraintStart_toEndOf="@+id/tv_bsi_name"
        app:layout_constraintTop_toTopOf="@+id/tv_bsi_name" />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi_bsi_load"
        style="@style/AVLoadingIndicatorView.Small"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:padding="5dp"
        android:visibility="visible"
        app:indicatorColor="@color/gray"
        app:indicatorName="LineSpinFadeLoaderIndicator"
        app:layout_constraintBottom_toBottomOf="@+id/tv_bsi_name"
        app:layout_constraintEnd_toStartOf="@+id/tv_bsi_content"
        app:layout_constraintTop_toTopOf="@+id/tv_bsi_name" />

    <TextView
        android:id="@+id/tv_bsi_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="right"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textColorHint="@color/light_gray"
        android:textSize="@dimen/content_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/tv_bsi_name"
        app:layout_constraintEnd_toStartOf="@+id/iv_bsi_right_icon"
        app:layout_constraintTop_toTopOf="@+id/tv_bsi_name" />

    <ImageView
        android:id="@+id/iv_bsi_right_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_keyboard_arrow_right"
        app:layout_constraintBottom_toBottomOf="@+id/tv_bsi_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_bsi_name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/light_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>
