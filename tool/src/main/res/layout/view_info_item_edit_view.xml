<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viiev_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:minHeight="40dp">

    <ImageView
        android:id="@+id/viiev_required_marker"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_stars"
        app:layout_constraintBottom_toBottomOf="@+id/viiev_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viiev_name" />

    <TextView
        android:id="@+id/viiev_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:text="@string/item_name"
        android:textColor="@color/black"
        android:textSize="@dimen/item_name_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/viiev_content"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:background="@null"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center_vertical|right"
        android:textCursorDrawable="@drawable/background_edit_cursor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/viiev_postfix"
        app:layout_constraintStart_toEndOf="@+id/viiev_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/viiev_postfix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/content_text_size"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viiev_content"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/viiev_bottom_line"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/light_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/viiev_name" />
</android.support.constraint.ConstraintLayout>
