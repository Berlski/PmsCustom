<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/tv_sii_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/item_name_size" />

    <ImageView
        android:id="@+id/iv_sii_required_marker"
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toRightOf="@id/tv_sii_name"
        android:src="@drawable/ic_stars" />

    <EditText
        android:id="@+id/et_sii_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sii_name"
        android:layout_marginEnd="5dp"
        android:background="@null"
        android:gravity="top"
        android:lineSpacingMultiplier="1.2"
        android:paddingTop="5dp"
        android:paddingEnd="15dp"
        android:paddingBottom="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/light_gray"
        android:textCursorDrawable="@drawable/background_edit_cursor"
        android:textSize="@dimen/content_text_size" />

    <ImageView
        android:id="@+id/iv_sii_voice"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:paddingRight="5dp"
        android:paddingBottom="7dp"
        android:src="@drawable/ic_voice_button" />

</RelativeLayout>
