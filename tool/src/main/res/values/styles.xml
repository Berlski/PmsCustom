<resources>

    <declare-styleable name="InputInfoSwitchView">
        <attr name="iisv_name" format="string" /><!--字典名称-->
        <attr name="iisv_is_required" format="boolean" /><!--是否必选-->
        <attr name="iisv_default_select" format="integer" /><!--默认选中项-->

        <attr name="iisv_option_one" format="string" /><!--选项一-->
        <attr name="iisv_option_two" format="string" /><!--选项二-->
        <attr name="iisv_option_three" format="string" /><!--选项三-->
        <attr name="iisv_option_four" format="string" /><!--选项四-->
        <attr name="iisv_option_five" format="string" /><!--选项五-->
    </declare-styleable>

    <declare-styleable name="SwitchView">
        <attr name="sv_default_select" format="integer" /><!--默认选中项-->

        <attr name="sv_option_one" format="string" /><!--选项一-->
        <attr name="sv_option_two" format="string" /><!--选项二-->
        <attr name="sv_option_three" format="string" /><!--选项三-->
        <attr name="sv_option_four" format="string" /><!--选项四-->
        <attr name="sv_option_five" format="string" /><!--选项五-->
    </declare-styleable>

    <declare-styleable name="InfoEntryView">
        <attr name="iev_name" format="string" /><!--条目名称-->
        <attr name="iev_is_required" format="boolean" /><!--是否必选-->
        <attr name="iev_hint" format="string" /><!--提示文字-->
        <attr name="iev_length" format="integer" /><!--文字文字长度-->
        <attr name="iev_postfix" format="string" /><!--后缀，如：单位-->

        <attr name="iev_type">
            <flag name="TEXT" value="0x0001" /><!--文本文字-->
            <flag name="NAME" value="0x0002" /><!--姓名-->
            <flag name="EMAIL" value="0x0003" /><!--电子邮箱-->
            <flag name="PHONE_NO" value="0x0004" /><!--手机号-->
            <flag name="CREDENTIAL_NO" value="0x0005" /><!--证件号-->
        </attr>

        <attr name="iev_credential_type">
            <flag name="ID_CARD" value="0x0021" /><!--身份证-->
            <flag name="PASSPORT" value="0x0022" /><!--护照-->
            <flag name="HONGKONG_AND_MACAO_PASS" value="0x0023" /><!--港澳通行证-->
            <flag name="TAIWAN_COMPATRIOT_CARD" value="0x0024" /><!--台湾同胞证-->
        </attr>
    </declare-styleable>

    <!--阴影按钮-->
    <declare-styleable name="ShadowButton">
        <attr name="gb_text" format="string" />
        <attr name="gb_textColor" format="color" />
        <attr name="gb_textSize" format="dimension" />
    </declare-styleable>

    <!--选择list对象的组合自定义view-->
    <declare-styleable name="SelectBeanView">
        <attr name="sbv_name" format="string" /><!--字典名称-->
        <attr name="sbv_is_required" format="boolean" /><!--是否必选-->
        <attr name="sbv_hint" format="string" /><!--提示文字-->
        <attr name="sbv_is_multiple_select" format="boolean" /><!--是否多选-->
    </declare-styleable>

    <!--筛选蓝，下拉菜单开关-->
    <declare-styleable name="MenuButton">
        <attr name="mtvText" format="string" />
        <attr name="mtvTextColor" format="color" />
        <attr name="mtvTextSize" format="dimension" />
        <attr name="mtvMinTextSize" format="dimension" />
    </declare-styleable>


    <!--选择list对象的组合自定义view-->
    <declare-styleable name="SpeechInputView">
        <attr name="siv_name" format="string" /><!--名称-->
        <attr name="siv_is_required" format="boolean" /><!--是否必选-->
        <attr name="siv_is_voice" format="boolean" /><!--是否语音-->
        <attr name="siv_hint" format="string" /><!--提示文字-->
    </declare-styleable>
</resources>
